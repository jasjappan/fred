<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="kuka_lwr">

 <xacro:property name="dir" value="/home/thomas/tutorial_ws/urdf_tutorial/urdf" />
 <xacro:property name="M_PI" value="3.1415926535897931" />
 <xacro:property name="name" value="kuka" />
  <!--
     Little helper macro to define the inertia matrix needed
     for links.
     -->
  <!-- width is along x axis
       length is along y axis
       height is along z axis
  -->
  <xacro:macro name="cuboid_inertia_def" params="width height length mass">
    <inertia ixx="${mass * (height * height + length * length) / 12}"
             iyy="${mass * (width * width + height * height) / 12}"
             izz="${mass * (width * width + length * length) / 12}"
             ixy="0" iyz="0" ixz="0"/>
  </xacro:macro>

  <!-- length is along the y-axis! -->
  <xacro:macro name="cylinder_inertia_def" params="radius length mass">
    <inertia ixx="${mass * (3 * radius * radius + length * length) / 12}"
             iyy="${mass * radius* radius / 2}"
             izz="${mass * (3 * radius * radius + length * length) / 12}"
             ixy="0" iyz="0" ixz="0"/>
  </xacro:macro>

  <xacro:property name="arm_elem_link_mass" value="2.0"/>
  <xacro:property name="arm_elem_ball_link_mass" value="2.0"/>
  <xacro:property name="arm_elem_end_link_mass" value="2.0"/>
  <xacro:property name="safety_controller_k_pos" value="100" />
  <xacro:property name="safety_controller_k_vel" value="2" />
  <xacro:property name="joint_damping" value="0.1" />

  <xacro:property name="arm_velocity_scale_factor" value="1"/>
  <xacro:property name="right" value="0" />
  <!-- right is either 1 (for right arm) or -1 (for left arm) -->

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>


  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="-0.08 -0.08 0"/>
      <geometry>
        <mesh filename="file://${dir}/meshes_fred/base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <link name="base_plate">
    <visual>
      <origin rpy="0 0 0" xyz="-0.06 -0.06 0"/>
      <geometry>
        <mesh filename="file://${dir}/meshes_fred/base_plate.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <joint name="base_to_base_plate" type="continuous">
    <parent link="base_link"/>
    <child link="base_plate"/>
    <origin xyz="0 0 0.0425"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="arm_lower">
    <visual>
      <origin rpy="0 1.57 0" xyz="-0.032 -0.0243 0.036"/>
      <geometry>
        <mesh filename="file://${dir}/meshes_fred/arm_lower.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>
  <joint name="base_plate_to_arm_lower" type="continuous">
    <parent link="base_plate"/>
    <child link="arm_lower"/>
    <origin xyz="0 0 0.036"/>
    <axis xyz="1 0 0"/>
  </joint>

  <link name="arm_upper">
    <visual>
      <origin rpy="0 ${M_PI} 0" xyz="0.019 -0.0415 0.02"/>
      <geometry>
        <mesh filename="file://${dir}/meshes_fred/arm_upper.stl" scale="0.001 0.001 0.001"/>
      </geometry>195
      <material name="blue"/>
    </visual>
  </link>
  <joint name="arm_lower_to_arm_upper" type="continuous">
    <parent link="arm_lower"/>
    <child link="arm_upper"/>
    <origin xyz="0 0.158 0"/>
    <axis xyz="1 0 0"/>
  </joint>


  <link name="wrist">
    <visual>
      <origin rpy="0 0 0" xyz="-0.036625 0 -0.02"/>
      <geometry>
        <mesh filename="file://${dir}/meshes_fred/wrist.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>
  <joint name="arm_upper_to_wrist" type="continuous">
    <parent link="arm_upper"/>
    <child link="wrist"/>
    <origin xyz="0 0.102 0"/>
    <axis xyz="0 1 0"/>
  </joint>


  <link name="wrist_servo">
    <visual>
      <origin rpy="0 0 ${M_PI/2}" xyz="0.0145 -0.017 -0.03525"/>
      <geometry>
        <mesh filename="file://${dir}/meshes_fred/servo.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="blue"/>
    </visual> 
  </link>
  <joint name="wrist_to_wrist_servo" type="continuous">
    <parent link="wrist"/>
    <child link="wrist_servo"/>
    <origin xyz="0 0.11625 0"/>
    <axis xyz="1 0 0"/>
  </joint>


  <link name="gripper">
    <visual>
      <origin rpy="${-M_PI/2} 0 0" xyz="-0.03 0 0.015"/>
      <geometry>
        <mesh filename="file://${dir}/meshes_fred/gripper.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>
  <joint name="wrist_servo_to_gripper" type="continuous">
    <parent link="wrist_servo"/>
    <child link="gripper"/>
    <origin xyz="0 0.017 0"/>
    <axis xyz="0 1 0"/>
  </joint>

</robot>
